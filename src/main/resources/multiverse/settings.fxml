<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="299.0" prefWidth="400"
            stylesheets="@/launcher.css" xmlns="http://javafx.com/javafx/11.0.14-internal"
            fx:controller="multiverse.Settings">

    <HBox alignment="CENTER" spacing="10"/>
    <bottom>
        <VBox alignment="BOTTOM_CENTER" BorderPane.alignment="CENTER">
            <HBox alignment="CENTER" prefHeight="51.0" prefWidth="400.0" spacing="10">
                <Button fx:id="saveButton" onAction="#handleSave" text="Save Settings"/>
                <Button fx:id="cancelButton" onAction="#handleCancel" text="Cancel"/>
            </HBox>
        </VBox>
    </bottom>
    <center>
        <VBox alignment="CENTER" fillWidth="false" prefHeight="249.0" prefWidth="400.0" BorderPane.alignment="CENTER">
            <Label alignment="BOTTOM_LEFT" contentDisplay="CENTER" prefHeight="30.0" prefWidth="350.0"
                   text="Itch.io API Key"/>
            <TextField fx:id="itchIoApiKey" alignment="TOP_LEFT" prefHeight="30.0" prefWidth="350.0"/>
            <Label alignment="BOTTOM_LEFT" contentDisplay="CENTER" layoutX="35.0" layoutY="89.0" prefHeight="30.0"
                   prefWidth="350.0" text="Minimum Memory Allocation"/>
            <Slider fx:id="minRamSlider" layoutX="35.0" layoutY="119.0" majorTickUnit="1024.0" prefWidth="350.0"
                    showTickLabels="true" showTickMarks="true" snapToTicks="true"/>
            <Label alignment="BOTTOM_LEFT" contentDisplay="CENTER" layoutX="35.0" layoutY="44.0" prefHeight="30.0"
                   prefWidth="350.0" text="Maximum Memory Allocation"/>
            <Slider fx:id="maxRamSlider" majorTickUnit="1024.0" prefWidth="350.0" showTickLabels="true"
                    showTickMarks="true" snapToTicks="true"/>
            <HBox alignment="CENTER" spacing="10.0">
                <Label alignment="BOTTOM_LEFT" contentDisplay="CENTER" text="Manage:"/>
                <Button mnemonicParsing="false" text="Cosmic Reach" onAction="#manageCR"/>
                <Button mnemonicParsing="false" text="Cosmic Quilt" onAction="#manageCQ"/>
                <Button mnemonicParsing="false" text="Icons" onAction="#manageIcons"/>
            </HBox>
            <Label fx:id="errorField" textFill="#ed4337"/>
        </VBox>
    </center>
</BorderPane>
