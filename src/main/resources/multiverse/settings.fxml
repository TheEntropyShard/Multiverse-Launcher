<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="226.0" prefWidth="400" stylesheets="@/launcher.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="multiverse.Settings">

   <HBox alignment="CENTER" spacing="10" />
   <bottom>
      <VBox alignment="BOTTOM_CENTER" BorderPane.alignment="CENTER">
         <HBox alignment="CENTER" prefHeight="35.0" prefWidth="400.0" spacing="10">
            <Button fx:id="saveButton" onAction="#handleSave" text="Save Settings" />
            <Button fx:id="cancelButton" onAction="#handleCancel" text="Cancel" />
         </HBox>
      </VBox>
   </bottom>
   <center>
      <VBox alignment="CENTER" fillWidth="false" prefHeight="175.0" prefWidth="462.0" BorderPane.alignment="CENTER">
         <Label alignment="BOTTOM_LEFT" contentDisplay="CENTER" prefHeight="30.0" prefWidth="350.0" text="Itch.io API Key" />
         <TextField fx:id="itchIoApiKey" alignment="TOP_LEFT" prefHeight="30.0" prefWidth="350.0" />
         <Label fx:id="errorField" textFill="#ed4337" />
      </VBox>
   </center>
</BorderPane>
