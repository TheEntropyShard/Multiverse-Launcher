<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="226.0" prefWidth="400" stylesheets="launcher.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="multiverse.AddProfil">

    <HBox alignment="CENTER" spacing="10" />
   <bottom>
       <VBox alignment="BOTTOM_CENTER" BorderPane.alignment="CENTER">
           <HBox alignment="CENTER" prefHeight="35.0" prefWidth="400.0" spacing="10">
               <Button fx:id="saveButton" onAction="#handleSave" text="Save Profile" />
               <Button fx:id="cancelButton" onAction="#handleCancel" text="Cancel" />
           </HBox>
       </VBox>
   </bottom>
   <center>
       <VBox alignment="BOTTOM_CENTER" fillWidth="false" prefHeight="175.0" prefWidth="462.0" BorderPane.alignment="CENTER">
           <Label alignment="BOTTOM_LEFT" contentDisplay="CENTER" prefHeight="30.0" prefWidth="350.0" text="Profile Name" />
           <TextField fx:id="profileNameField" alignment="TOP_LEFT" prefHeight="30.0" prefWidth="350.0" />
           <Label alignment="BOTTOM_LEFT" prefHeight="30.0" prefWidth="350.0" text="Version" />
           <ComboBox fx:id="versionComboBox" prefHeight="30.0" prefWidth="350.0" />
         <Label alignment="BOTTOM_LEFT" layoutX="35.0" layoutY="88.0" prefHeight="30.0" prefWidth="350.0" text="Quilt Version (Fabric compatible)" />
         <ComboBox fx:id="modSupportComboBox" layoutX="35.0" layoutY="105.0" prefHeight="30.0" prefWidth="350.0" />
         <Label fx:id="errorField" textFill="#ed4337" />
         <ProgressBar fx:id="progressBar" prefWidth="200.0" progress="0.0" visible="false" />
       </VBox>
   </center>
</BorderPane>
